"use client";
import { useState, useEffect } from "react";
import { useRouter } from "next/navigation";
import DashboardLayout from '../../../components/DashboardLayout';
import ConfigModal from '../../../components/ConfigModal';

type SocialAccount = {
  id: string;
  platform: string;
  username: string;
  isConnected: boolean;
  connectionError?: string;
};

type ScheduledPost = {
  id: string;
  content: string;
  mediaUrls: string[];
  scheduledFor: string;
  status: "draft" | "scheduled" | "publishing" | "published" | "failed" | "cancelled";
  socialAccount?: {
    platform: string;
    username: string;
  };
};

type Tenant = {
  id: string;
  name: string;
  logoUrl?: string;
};

export default function ProgramacionPage() {
  const [tenants, setTenants] = useState<Tenant[]>([]);
  const [selectedTenant, setSelectedTenant] = useState<string>("");
  const [socialAccounts, setSocialAccounts] = useState<SocialAccount[]>([]);
  const [scheduledPosts, setScheduledPosts] = useState<ScheduledPost[]>([]);
  const [loading, setLoading] = useState(true);
  const [activeTab, setActiveTab] = useState<"create" | "scheduled" | "connect">("create");
  
  // Form states
  const [postContent, setPostContent] = useState("");
  const [selectedAccounts, setSelectedAccounts] = useState<string[]>([]);
  const [scheduledDate, setScheduledDate] = useState("");
  const [scheduledTime, setScheduledTime] = useState("");
  const [mediaFiles, setMediaFiles] = useState<File[]>([]);
  const [showConfigModal, setShowConfigModal] = useState(false);
  const [configPlatform, setConfigPlatform] = useState<string>("");
  const [oauthMessage, setOauthMessage] = useState<{ type: 'success' | 'error', message: string } | null>(null);

  // Detectar mensajes OAuth en la URL
  useEffect(() => {
    const urlParams = new URLSearchParams(window.location.search);
    const oauthSuccess = urlParams.get('oauth_success');
    const oauthError = urlParams.get('oauth_error');
    
    if (oauthSuccess) {
      setOauthMessage({
        type: 'success',
        message: `‚úÖ ${oauthSuccess} conectado exitosamente. Los tokens han sido guardados.`
      });
      
      // Limpiar URL
      window.history.replaceState({}, document.title, window.location.pathname);
      
      // Auto-cerrar mensaje despu√©s de 5 segundos
      setTimeout(() => setOauthMessage(null), 5000);
    }
    
    if (oauthError) {
      let errorMessage = '‚ùå Error en la autorizaci√≥n: ';
      switch (oauthError) {
        case 'access_denied':
          errorMessage += 'Acceso denegado por el usuario.';
          break;
        case 'state_mismatch':
          errorMessage += 'Error de seguridad. Intenta nuevamente.';
          break;
        case 'account_not_found':
          errorMessage += 'Configuraci√≥n no encontrada.';
          break;
        default:
          errorMessage += oauthError;
      }
      
      setOauthMessage({ type: 'error', message: errorMessage });
      
      // Limpiar URL
      window.history.replaceState({}, document.title, window.location.pathname);
    }
  }, []);
  
  const handleConfigurePlatform = (platformId: string) => {
    setConfigPlatform(platformId);
    setShowConfigModal(true);
  };

  const handleCloseConfigModal = () => {
    setShowConfigModal(false);
    setConfigPlatform("");
  };

  const platformNames: { [key: string]: string } = {
    'facebook': 'Facebook',
    'instagram': 'Instagram',
    'twitter': 'Twitter',
    'linkedin': 'LinkedIn',
    'youtube': 'YouTube',
    'tiktok': 'TikTok',
    'pinterest': 'Pinterest',
    'telegram': 'Telegram',
    'whatsapp': 'WhatsApp Business',
    'snapchat': 'Snapchat'
  };

  const router = useRouter();

  useEffect(() => {
    loadData();
  }, []);

  useEffect(() => {
    if (selectedTenant) {
      loadSocialAccounts();
      loadScheduledPosts();
    }
  }, [selectedTenant]);

  const loadData = async () => {
    try {
      const response = await fetch("/api/tenants");
      if (response.status === 401) {
        router.push("/login");
        return;
      }
      const data = await response.json();
      const tenantsList = data.tenants || [];
      setTenants(tenantsList);
      
      // Auto-select from localStorage or first tenant
      const saved = localStorage.getItem("selectedTenant");
      if (saved && tenantsList.find((t: Tenant) => t.id === saved)) {
        setSelectedTenant(saved);
      } else if (tenantsList.length > 0) {
        setSelectedTenant(tenantsList[0].id);
      }
    } catch (error) {
      console.error("Error loading tenants:", error);
    } finally {
      setLoading(false);
    }
  };

  const loadSocialAccounts = async () => {
    try {
      const response = await fetch(`/api/social-accounts?tenantId=${selectedTenant}`);
      if (response.ok) {
        const data = await response.json();
        setSocialAccounts(data.socialAccounts || []);
      }
    } catch (error) {
      console.error("Error loading social accounts:", error);
    }
  };

  const loadScheduledPosts = async () => {
    try {
      const response = await fetch(`/api/scheduled-posts?tenantId=${selectedTenant}`);
      if (response.ok) {
        const data = await response.json();
        setScheduledPosts(data.posts || []);
      }
    } catch (error) {
      console.error("Error loading scheduled posts:", error);
    }
  };

  const handleTenantChange = (tenantId: string) => {
    setSelectedTenant(tenantId);
    localStorage.setItem("selectedTenant", tenantId);
  };

  const createPost = async () => {
    if (!postContent.trim() || selectedAccounts.length === 0) {
      alert("Por favor completa todos los campos obligatorios");
      return;
    }

    try {
      const scheduledFor = scheduledDate && scheduledTime ? `${scheduledDate}T${scheduledTime}:00` : null;
      
      const response = await fetch("/api/scheduled-posts", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          tenantId: selectedTenant,
          content: postContent,
          scheduledFor,
          socialAccountIds: selectedAccounts
        })
      });

      if (response.ok) {
        setPostContent("");
        setSelectedAccounts([]);
        setScheduledDate("");
        setScheduledTime("");
        setMediaFiles([]);
        loadScheduledPosts();
        alert("¬°Post programado exitosamente!");
      }
    } catch (error) {
      console.error("Error creating post:", error);
      alert("Error creando el post");
    }
  };

  const publishNow = async () => {
    if (!postContent.trim() || selectedAccounts.length === 0) {
      alert("Por favor completa el contenido y selecciona al menos una cuenta");
      return;
    }

    const confirmed = confirm('¬øEst√°s seguro de que quieres publicar AHORA MISMO en las redes sociales seleccionadas?');
    if (!confirmed) return;

    try {
      // Get platform names from selected accounts
      const platforms = selectedAccounts.map(accountId => {
        const account = socialAccounts.find(acc => acc.id === accountId);
        return account?.platform || 'unknown';
      }).filter(platform => platform !== 'unknown');

      const response = await fetch("/api/publish-real", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          tenantId: selectedTenant,
          content: postContent,
          platforms,
          publishNow: true
        })
      });

      const result = await response.json();

      if (response.ok && result.success) {
        setPostContent("");
        setSelectedAccounts([]);
        setMediaFiles([]);
        alert(`¬°Post publicado exitosamente!\n\nPlataformas: ${platforms.join(', ')}\nID: ${result.publishId}`);
      } else {
        alert(`Error publicando: ${result.error || 'Error desconocido'}`);
      }
    } catch (error) {
      console.error("Error publishing now:", error);
      alert("Error publicando el post");
    }
  };

  if (loading) {
    return (
      <DashboardLayout title="Programaci√≥n RRSS" subtitle="Cargando datos...">
        <div className="flex items-center justify-center h-64">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500"></div>
        </div>
      </DashboardLayout>
    );
  }

  const selectedTenantData = tenants.find(t => t.id === selectedTenant);
  const connectedAccounts = socialAccounts.filter(acc => acc.isConnected);

  return (
    <DashboardLayout 
      title="Programaci√≥n RRSS" 
      subtitle={selectedTenantData ? `Cliente: ${selectedTenantData.name}` : "Crea y programa contenido para tus redes sociales"}
    >
      {/* Mensaje OAuth */}
      {oauthMessage && (
        <div className={`mb-6 p-4 rounded-lg border ${
          oauthMessage.type === 'success' 
            ? 'bg-green-50 border-green-200 text-green-800' 
            : 'bg-red-50 border-red-200 text-red-800'
        }`}>
          <div className="flex justify-between items-center">
            <p className="text-sm font-medium">{oauthMessage.message}</p>
            <button 
              onClick={() => setOauthMessage(null)}
              className="text-gray-500 hover:text-gray-700 ml-2"
            >
              ‚úï
            </button>
          </div>
        </div>
      )}

      <div className="space-y-6">
        {/* Client Selector */}
        <div className="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center space-x-3">
              <div className="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg flex items-center justify-center">
                <i className="fas fa-calendar-alt text-white"></i>
              </div>
              <div>
                <h3 className="text-lg font-semibold text-gray-900">Cliente Actual</h3>
                <p className="text-sm text-gray-600">
                  {selectedTenantData ? selectedTenantData.name : 'Selecciona un cliente para programar contenido'}
                </p>
              </div>
            </div>
            
            {tenants.length > 1 && (
              <select
                value={selectedTenant}
                onChange={(e) => handleTenantChange(e.target.value)}
                className="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white min-w-64"
              >
                {tenants.map(tenant => (
                  <option key={tenant.id} value={tenant.id}>
                    {tenant.name}
                  </option>
                ))}
              </select>
            )}
          </div>
        </div>

        {/* Tabs */}
        <div className="bg-white rounded-xl shadow-sm border border-gray-200">
          <div className="px-6 py-4 border-b border-gray-200">
            <div className="flex space-x-8">
              {[
                { key: "create", label: "‚úçÔ∏è Crear Post", count: null },
                { key: "scheduled", label: "üìÖ Programados", count: scheduledPosts.length },
                { key: "connect", label: "üîó Conectar Cuentas", count: connectedAccounts.length }
              ].map(tab => (
                <button
                  key={tab.key}
                  onClick={() => setActiveTab(tab.key as any)}
                  className={`py-2 px-1 border-b-2 font-medium text-sm transition-colors ${
                    activeTab === tab.key
                      ? "border-blue-500 text-blue-600"
                      : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  }`}
                >
                  {tab.label}
                  {tab.count !== null && (
                    <span className={`ml-2 px-2 py-1 text-xs rounded-full ${
                      activeTab === tab.key ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-600"
                    }`}>
                      {tab.count}
                    </span>
                  )}
                </button>
              ))}
            </div>
          </div>
          
          <div className="p-6">
        {activeTab === "create" && (
          <div className="space-y-6">
            {connectedAccounts.length === 0 ? (
              <div className="text-center py-12 bg-yellow-50 border-2 border-yellow-200 rounded-xl">
                <div className="mb-4">
                  <svg className="mx-auto h-12 w-12 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z" />
                  </svg>
                </div>
                <h3 className="text-lg font-bold text-yellow-900 mb-2">No hay cuentas conectadas</h3>
                <p className="text-yellow-700 mb-4">Necesitas conectar al menos una cuenta de red social para programar contenido</p>
                <button
                  onClick={() => setActiveTab("connect")}
                  className="px-6 py-2 bg-yellow-600 text-white font-bold rounded-lg hover:bg-yellow-700 transition-colors"
                >
                  Conectar Cuentas
                </button>
              </div>
            ) : (
              <div className="grid lg:grid-cols-2 gap-8">
                {/* Formulario */}
                <div className="space-y-6">
                  <div className="bg-white border-2 border-gray-200 rounded-xl p-6">
                    <h2 className="text-xl font-bold text-gray-900 mb-6">Crear Nuevo Post</h2>
                    
                    {/* Contenido */}
                    <div className="space-y-4">
                      <div>
                        <label className="block text-sm font-bold text-gray-700 mb-2">
                          Contenido del Post *
                        </label>
                        <textarea
                          value={postContent}
                          onChange={(e) => setPostContent(e.target.value)}
                          placeholder="¬øQu√© quieres compartir con tu audiencia?"
                          className="w-full h-32 p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none"
                        />
                        <p className="text-xs text-gray-500 mt-1">{postContent.length}/2200 caracteres</p>
                      </div>

                      {/* Cuentas donde publicar */}
                      <div>
                        <label className="block text-sm font-bold text-gray-700 mb-3">
                          Publicar en: *
                        </label>
                        <div className="space-y-2">
                          {connectedAccounts.map(account => (
                            <label key={account.id} className="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                              <input
                                type="checkbox"
                                checked={selectedAccounts.includes(account.id)}
                                onChange={(e) => {
                                  if (e.target.checked) {
                                    setSelectedAccounts([...selectedAccounts, account.id]);
                                  } else {
                                    setSelectedAccounts(selectedAccounts.filter(id => id !== account.id));
                                  }
                                }}
                                className="mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                              />
                              <div className="flex items-center gap-3">
                                <img 
                                  src={`https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/${account.platform}.svg`}
                                  alt={account.platform}
                                  className="w-5 h-5"
                                />
                                <div>
                                  <p className="font-medium text-gray-900 capitalize">{account.platform}</p>
                                  <p className="text-sm text-gray-500">@{account.username}</p>
                                </div>
                              </div>
                            </label>
                          ))}
                        </div>
                      </div>

                      {/* Fecha y hora */}
                      <div className="grid grid-cols-2 gap-4">
                        <div>
                          <label className="block text-sm font-bold text-gray-700 mb-2">
                            Fecha (opcional para publicaci√≥n inmediata)
                          </label>
                          <input
                            type="date"
                            value={scheduledDate}
                            onChange={(e) => setScheduledDate(e.target.value)}
                            min={new Date().toISOString().split('T')[0]}
                            className="w-full p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                          />
                        </div>
                        <div>
                          <label className="block text-sm font-bold text-gray-700 mb-2">
                            Hora (opcional para publicaci√≥n inmediata)
                          </label>
                          <input
                            type="time"
                            value={scheduledTime}
                            onChange={(e) => setScheduledTime(e.target.value)}
                            className="w-full p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                          />
                        </div>
                      </div>

                      {/* Info sobre opciones de publicaci√≥n */}
                      <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div className="flex items-start space-x-3">
                          <div className="flex-shrink-0">
                            üí°
                          </div>
                          <div>
                            <p className="text-sm text-blue-800 font-medium">Opciones de publicaci√≥n:</p>
                            <ul className="text-xs text-blue-700 mt-1 space-y-1">
                              <li>‚Ä¢ <strong>Publicar AHORA:</strong> Se publica inmediatamente en las redes seleccionadas</li>
                              <li>‚Ä¢ <strong>Programar:</strong> Requiere fecha y hora para publicaci√≥n futura</li>
                            </ul>
                          </div>
                        </div>
                      </div>

                      <div className="space-y-3">
                        <button
                          onClick={publishNow}
                          disabled={!postContent || selectedAccounts.length === 0}
                          className="w-full py-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-bold rounded-lg hover:from-green-700 hover:to-emerald-700 transition-all duration-200 shadow-md hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed"
                        >
                          üöÄ Publicar AHORA
                        </button>
                        <button
                          onClick={createPost}
                          disabled={!postContent || !scheduledDate || !scheduledTime || selectedAccounts.length === 0}
                          className="w-full py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed"
                        >
                          üìÖ Programar Post
                        </button>
                      </div>
                    </div>
                  </div>
                </div>

                {/* Preview */}
                <div className="space-y-6">
                  <div className="bg-gray-50 border-2 border-gray-200 rounded-xl p-6">
                    <h2 className="text-xl font-bold text-gray-900 mb-4">Vista Previa</h2>
                    <div className="bg-white rounded-lg p-4 border">
                      <div className="flex items-center gap-3 mb-3">
                        {selectedTenantData?.logoUrl && (
                          <img
                            src={selectedTenantData.logoUrl}
                            alt="Logo"
                            className="w-10 h-10 object-cover rounded-full"
                          />
                        )}
                        <div>
                          <p className="font-bold text-gray-900">{selectedTenantData?.name}</p>
                          <p className="text-sm text-gray-500">
                            {scheduledDate && scheduledTime 
                              ? `${scheduledDate} ${scheduledTime}` 
                              : "Fecha no definida"
                            }
                          </p>
                        </div>
                      </div>
                      <div className="text-gray-800">
                        {postContent || (
                          <span className="text-gray-400 italic">El contenido aparecer√° aqu√≠...</span>
                        )}
                      </div>
                      {selectedAccounts.length > 0 && (
                        <div className="flex gap-2 mt-3">
                          {selectedAccounts.map(accountId => {
                            const account = connectedAccounts.find(acc => acc.id === accountId);
                            return account && (
                              <span key={accountId} className="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
                                {account.platform}
                              </span>
                            );
                          })}
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            )}
          </div>
        )}

        {activeTab === "scheduled" && (
          <div className="space-y-4">
            <div className="flex items-center justify-between">
              <h2 className="text-xl font-bold text-gray-900">Posts Programados</h2>
              <div className="flex gap-2">
                {["draft", "scheduled", "published", "failed"].map(status => (
                  <span
                    key={status}
                    className={`px-3 py-1 text-xs font-medium rounded-full ${{
                      draft: "bg-gray-100 text-gray-800",
                      scheduled: "bg-blue-100 text-blue-800", 
                      published: "bg-green-100 text-green-800",
                      failed: "bg-red-100 text-red-800"
                    }[status]}`}
                  >
                    {status.charAt(0).toUpperCase() + status.slice(1)}: {scheduledPosts.filter(p => p.status === status).length}
                  </span>
                ))}
              </div>
            </div>

            {scheduledPosts.length === 0 ? (
              <div className="text-center py-12 text-gray-500">
                <p className="text-lg">No hay posts programados</p>
                <p className="text-sm mt-2">Crea tu primer post en la pesta√±a "Crear Post"</p>
              </div>
            ) : (
              <div className="grid gap-4">
                {scheduledPosts.map(post => (
                  <div key={post.id} className="bg-white border border-gray-200 rounded-xl p-6">
                    <div className="flex items-start justify-between">
                      <div className="flex-1">
                        <div className="flex items-center gap-3 mb-3">
                          <span className={`px-3 py-1 text-xs font-bold rounded-full ${{
                            draft: "bg-gray-100 text-gray-800",
                            scheduled: "bg-blue-100 text-blue-800",
                            publishing: "bg-yellow-100 text-yellow-800",
                            published: "bg-green-100 text-green-800",
                            failed: "bg-red-100 text-red-800",
                            cancelled: "bg-gray-100 text-gray-600"
                          }[post.status]}`}>
                            {post.status.toUpperCase()}
                          </span>
                          {post.socialAccount && (
                            <span className="text-sm text-gray-600">
                              üì± {post.socialAccount.platform} @{post.socialAccount.username}
                            </span>
                          )}
                        </div>
                        <p className="text-gray-900 mb-3">{post.content}</p>
                        <p className="text-sm text-gray-500">
                          üìÖ Programado para: {new Date(post.scheduledFor).toLocaleString()}
                        </p>
                      </div>
                      <div className="flex gap-2">
                        <button className="p-2 text-blue-600 hover:bg-blue-50 rounded">
                          ‚úèÔ∏è
                        </button>
                        <button className="p-2 text-red-600 hover:bg-red-50 rounded">
                          üóëÔ∏è
                        </button>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        {activeTab === "connect" && (
          <div className="space-y-6">
            <h2 className="text-xl font-bold text-gray-900">Conectar Cuentas de Redes Sociales</h2>
            
            <div className="bg-blue-50 border-2 border-blue-200 rounded-xl p-6">
              <div className="flex items-start gap-4">
                <div className="bg-blue-600 rounded-full p-3">
                  <svg className="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 className="text-lg font-bold text-blue-900 mb-2">Configuraci√≥n de APIs requerida</h3>
                  <p className="text-blue-800 mb-3">
                    Para conectar tus cuentas de redes sociales, necesitas configurar las claves de API de cada plataforma.
                  </p>
                  <p className="text-blue-700 text-sm">
                    Esto te permitir√° publicar autom√°ticamente en tus redes sociales sin intervenci√≥n manual.
                  </p>
                </div>
              </div>
            </div>

            <div className="grid md:grid-cols-2 gap-6">
              {[
                { platform: "facebook", name: "Facebook", needsApi: true, docs: "https://developers.facebook.com/" },
                { platform: "instagram", name: "Instagram", needsApi: true, docs: "https://developers.facebook.com/docs/instagram-api" },
                { platform: "twitter", name: "Twitter/X", needsApi: true, docs: "https://developer.twitter.com/" },
                { platform: "linkedin", name: "LinkedIn", needsApi: true, docs: "https://developer.linkedin.com/" }
              ].map(social => {
                const account = socialAccounts.find(acc => acc.platform === social.platform);
                const isConnected = account?.isConnected;
                
                return (
                  <div key={social.platform} className="bg-white border-2 border-gray-200 rounded-xl p-6">
                    <div className="flex items-center gap-4 mb-4">
                      <img 
                        src={`https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/${social.platform}.svg`}
                        alt={social.name}
                        className="w-8 h-8"
                      />
                      <div>
                        <h3 className="text-lg font-bold text-gray-900">{social.name}</h3>
                        <p className="text-sm text-gray-600">
                          {account ? `@${account.username}` : "No configurado"}
                        </p>
                      </div>
                      <div className={`px-3 py-1 rounded-full text-xs font-bold ${{
                        true: "bg-green-100 text-green-800",
                        false: "bg-red-100 text-red-800"
                      }[isConnected ? "true" : "false"]}`}>
                        {isConnected ? "Conectado" : "Desconectado"}
                      </div>
                    </div>

                    {social.needsApi && (
                      <div className="space-y-3">
                        <p className="text-sm text-gray-600">
                          Requiere configuraci√≥n de API y OAuth
                        </p>
                        <div className="flex gap-2">
                          <button 
                            className="px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors text-sm"
                            onClick={() => window.open(social.docs, '_blank')}
                          >
                            üìö Ver Documentaci√≥n
                          </button>
                          <button 
                            onClick={() => handleConfigurePlatform(social.platform)}
                            className="px-4 py-2 border border-blue-600 text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors text-sm"
                          >
                            ‚öôÔ∏è Configurar
                          </button>
                        </div>
                      </div>
                    )}
                  </div>
                );
              })}
            </div>
          </div>
        )}
      </div>

      {/* Modal de Configuraci√≥n */}
      {showConfigModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
          <div className="bg-white rounded-lg p-6 w-full max-w-md">
            <div className="flex justify-between items-center mb-4">
              <h3 className="text-lg font-semibold">Configurar {platformNames[configPlatform]}</h3>
              <button 
                onClick={handleCloseConfigModal}
                className="text-gray-500 hover:text-gray-700"
              >
                ‚úï
              </button>
            </div>
            
            <ConfigModal 
              platform={configPlatform}
              clientId={selectedTenant}
              onSave={handleCloseConfigModal}
            />
          </div>
        </div>
      )}
    </DashboardLayout>
  );
}